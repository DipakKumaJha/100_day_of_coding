//This program regarding for college marks presentage using java 


import java.util.Scanner;

public class AttendencePercentage {
    public static void main(String[] args) {
          Scanner sc =new Scanner(System .in);
          String name;
          String reg;
          int mark , atte;
          int attmarks;
           System.out.println("Enter Your Name-:");
           name=sc.nextLine();
           System.out.println("Enter Your Registration Number-:");
           reg=sc.nextLine();
           System.out.println("Enter your attendance-:");
           atte=sc.nextInt();
           System.out.println("Enter Your total marks -:");
           mark =sc.nextInt();
           if( atte<=75)
           {
              mark =mark+0;
              System.out.println("Total Marks With Calculate Marks of Number -:"+mark);    
           }
           else if(atte >=75 && atte<=80)
           {
                mark =mark+1;
                System.out.println("Total Marks With Calculate Marks of Number -:"+mark);
           }
           else if(atte >=80 && atte<=85)
           {
                mark= mark+2;
                System.out.println("Total Marks With Calculate Marks of Number -:"+mark);
           }
           else if(atte >= 85 && atte <=90)
           {
                mark= mark+3;
                System.out.println("Total Marks With Calculate Marks of Number -:"+mark);
           }
           else if(atte >= 90 && atte <=95)
           {
                mark= mark+4;
                System.out.println("Total Marks With Calculate Marks of Number -:"+mark);
           }
           else if(atte >= 95 && atte <=100)
           {
                mark= mark+5;
                System.out.println("Total Marks With Calculate Marks of Number -:"+mark);
           }


    }
}
